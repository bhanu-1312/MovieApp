<%- include('partials/header') %>

<div class="container">
   <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% movies.forEach(function(movie){ %>
            <div class="col-md-3 col-xs-6">
                <div class="thumbnail">
                    <img src="<%= movie.image %>" > 
                    <div class="caption">
                        <!-- <h4><%= movie.name %> </h4> -->
                        <a  class="link" href="/movies/<%= movie._id %>"><%= movie.name %></a>
                    </div>
                </div>
            </div>
        <% }); %>    
    </div>
</div>
<% if(user){ %>
        <a class="btn btn-danger" href="/movies/new">New</a>
<% } %>

<%- include('partials/footer') %>